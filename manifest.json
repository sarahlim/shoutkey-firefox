{
  "manifest_version": 2,
  "name": "YellKey",
  "version": "1.1.0",
  "description": "Generate short-lived, human-readable URLs in one click. Official browser extension for YellKey.",
  "homepage_url": "https://github.com/sarahlim/yellkey-extension/",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://yellkey.com/api/new"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "YellKey",
    "default_popup": "popup.html",
    "browser_style": true
  }
}
